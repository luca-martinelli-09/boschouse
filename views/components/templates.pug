template#house
  #title(class="text-3xl font-bold")
  #address(class="opacity-80")

template#internal 
  #int(class="mt-3 opacity-80 text-base font-bold uppercase")

template#family-card 
  a#href.card
    div(class="flex items-center space-x-10")
      div(class="flex-1 space-y-4")
        #title(class="text-2xl font-bold")
        #components(class="opacity-80 text-sm")
        #message.message
          <ion-icon name="warning-outline"></ion-icon>
          span

      <ion-icon name="chevron-forward-outline" class="text-[#377D71] dark:text-[#CDBE78] text-xl"></ion-icon>

template#doorbell
  .flex(class="space-x-3 items-center")
    a#back.flex(href="/house/" + houseID)
      <ion-icon name="chevron-back-outline" class="text-[#377D71] dark:text-[#CDBE78] text-2xl"></ion-icon>

    #title(class="text-3xl font-bold")

  #internal(class="opacity-80")

  #message.message(class="mt-3")
    <ion-icon name="warning-outline"></ion-icon>
    span

  .flex.flex-col.space-y-1
    div(class="mt-3 opacity-80 text-base font-bold uppercase") Componenti
    div(class="opacity-80 text-base") Seleziona i componenti a cui inviare la notifica

  #components(class="flex flex-col space-y-1")

  .flex.flex-col.space-y-1
    div(class="mt-3 opacity-80 text-base font-bold uppercase") Aggiungi un messaggio
    div(class="opacity-80 text-base") Se necessario

  input#message-input.message-input(type="text" name="message" autocomplete="off" placeholder="Chi sei? Per cosa suoni?")

  .flex.justify-center.mt-5
    #bell(class="relative p-10 shadow-lg flex items-center justify-center bg-[#377D71] dark:bg-[#CDBE78] rounded-full aspect-square cursor-pointer")
      <ion-icon name="notifications-outline" class="text-white text-5xl z-10"></ion-icon>
      span(class="animate-ping absolute inline-flex h-3/5 w-3/5 rounded-full bg-[#377D71] dark:bg-[#CDBE78] opacity-75")

template#fam-component
  label#comp-label(class="cursor-pointer")
    input#comp-check(type="checkbox" class="sr-only peer" name="comp", checked)
    #title.component

template#toast
  div(class="fixed z-20 bottom-0 inset-x-0")
    #toast-container.toast
      <ion-icon class="err-icon text-2xl" name="close-circle-outline"></ion-icon>
      <ion-icon class="succ-icon text-2xl" name="checkmark-circle-outline"></ion-icon>
      #toast-message